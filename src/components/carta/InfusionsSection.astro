---
const { title, items } = Astro.props;
---

<div class="p-4 sm:p-6 bg-customGray bg-opacity-85 rounded shadow-md border-y-8 border-customYellow transition duration-300 ease-in-out transform hover:bg-customYellow">
  <h3 class="text-lg sm:text-xl font-semibold mb-4 text-center">
    {title}
  </h3>
  <div class="px-8 sm:px-32">
    <ol>
      {items.map(item => (
        typeof item === "string" ? (
          <li>{item}</li>
        ) : (
          item.text ? (
            <li class={item.className}>{item.text}</li>
          ) : (
            <>
              <li>{item.type}</li>

            </>
          )
        )
      ))}
    </ol>
  </div>
</div>
