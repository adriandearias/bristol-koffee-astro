---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Bristol Koffee">
  <main class="w-full">
    <div
      class="bg-cover bg-center object-cover"
      style="height: 89vh; background-image: url(https://res.cloudinary.com/dtmrroz8t/image/upload/v1715417033/bristol__01_coq4y4.jpg);"
    >
      <div
        class="flex items-center justify-center h-full w-full"
        style="backdrop-filter: brightness(40%);"
      >
        <div class="text-center">
          <h1
            class="text-customWhite text-2xl font-semibold uppercase md:text-3xl"
          >
            <span class="text-customYellow">Bristol</span> Koffee
          </h1>
          <h2 class="text-customWhite">
            Despierta tus sentidos en cada sorbo: ¡Bienvenido al aroma del café
            perfecto!
          </h2>
        </div>A
      </div>
    </div>
    <section class="max-w-screen-lg mx-auto p-10">
      <div
        class="2xl:container 2xl:mx-auto md:py-12 lg:px-20 md:px-6 py-9 px-4"
      >
        <div class="text-center">
          <h2
            class="font-semibold dark:text-white lg:text-4xl text-3xl lg:leading-9 md:leading-7 leading-9 text-gray-800 md:w-full w-9/12 mx-auto"
          >
            Síguenos en instagram
          </h2>
          <p
            class="font-normal text-base leading-6 dark:text-gray-400 text-gray-600 mt-4 lg:w-5/12 md:w-9/12 mx-auto"
          >
            <a href="https://www.instagram.com/bristolkoffee" target="_blank"
              >Síguenos en Instagram @<span class="underline cursor-pointer"
                >bristolkoffee</span
              ></a
            >
          </p>
        </div>
        <div
          class="grid lg:grid-cols-4 sm:grid-cols-2 grid-cols-1 lg:grap-8 md:gap-6 gap-4 mt-10"
        >
          <!-- item 1 -->

          <a href="https://www.instagram.com/bristolkoffee">
            <div class="relative group rounded-lg overflow-hidden">
              <img
                src="https://res.cloudinary.com/dtmrroz8t/image/upload/v1715771157/Bristol%20Koffee/bristol_kofee_3_dwws4e.png"
                alt="Bristol Koffee imagen tostada"
                class="lg:block hidden w-full"
              />
