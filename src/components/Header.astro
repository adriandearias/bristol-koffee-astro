---
import Nav from "../components/Nav.astro";
---
<header
  class="sticky top-0 z-50 bg-customGray w-full px-56 py-1 flex justify-between items-center rounded-b-lg shadow-md"
  style="position: sticky;"
>
  <img
    class="rounded-full w-20 h-20 static"
    src="https://res.cloudinary.com/dtmrroz8t/image/upload/v1714293432/Bristol%20Koffee/bristol_logo_tmp_nouozw.png"
    alt="bristol logo"
  />
  <Nav/>
</header>

<style>
  .menu-link {
    position: relative;
  }

  .menu-link::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -3px;
    width: 100%;
    height: 2px;
    background-color: transparent;
    transition: background-color 0.3s;
  }

  .menu-link:hover::after {
    background-color: #2e2d26;
  }
</style>
